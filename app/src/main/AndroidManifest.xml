<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.codepath.listly" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/listlyicon"
        android:theme="@style/ListlyTheme" >
        <!-- Splash screen -->
        <activity
            android:name="com.codepath.listly.view.SplashScreen"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.AllTasksActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".view.TaskDetailActivity"
            android:label="@string/task_details" >
        </activity>
        <activity
            android:name=".view.EditTaskActivity"
            android:label="@string/edit_task" >
        </activity>
    </application>

</manifest>
